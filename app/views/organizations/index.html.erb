<p id="notice"><%= notice %></p>

<div class="row my-4">
  <div class="col">
    <h1 class="display-5 font-weight-normal">Organizations</h1>
  </div>
</div>


<div class="row mb-4">
  <div class="col">
    <%= link_to 'New Organization', new_organization_path %>
  </div>
</div>

<div class="row">
  <div class="col">
    <table class="table">
      <thead>
        <tr>
          <th>Name</th>
          <th>Hourly rate</th>
          <th colspan="3">Actions</th>
        </tr>
      </thead>

      <tbody>
        <% @organizations.each do |organization| %>
        <tr>
          <td><%= organization.name %></td>
          <td><%= organization.hourly_rate %></td>
          <td><%= link_to 'Show', organization %></td>
          <td><%= link_to 'Edit', edit_organization_path(organization) %></td>
          <td><%= link_to 'Destroy', organization, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>