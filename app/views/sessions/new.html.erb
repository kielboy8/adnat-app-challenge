<h1 class="display-5 font-weight-normal my-4">Welcome to Adnat</h1>

<%= form_for(:session, :html => {role: "form"}, url: login_path) do |f| %>
<div class="row">
  <div class="col-3">
    <div class="form-group">
      <%= f.label :email_address, "Email" %>
      <%= f.email_field :email_address, class: "form-control", placeholder: "Enter Email" %>
    </div>
    <div class="form-group">
      <%= f.label :password, "Password" %>
      <%= f.password_field :password, class: "form-control", placeholder: "Enter password", automcomplete: "off" %>
    </div>
    <div class="form-group">
      <%= f.submit "Login", class: "btn btn-primary" %>
    </div>
  </div>
</div>
<% end %>

<div>
  <p>
    <%= link_to  "Sign Up", signup_path, class: "text-decoration-none" %>
  </p>
</div>